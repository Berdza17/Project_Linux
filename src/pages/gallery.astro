  description={`Browse our portfolio of custom furniture: kitchens, tables, TV stands, and wardrobes. ${siteConfig.companyName}`}
>
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">Our Gallery</h1>
      <p class="page-description">
        Browse our portfolio of handcrafted furniture. Each piece is custom-made with attention to detail and quality materials.
      </p>
    </div>
  </section>

  <!-- Filter Buttons -->
  <section class="filter-section">
    <div class="container">
      <div class="filter-buttons" role="tablist" aria-label="Filter products by category">
        {categories.map((cat, index) => (
          <button
            class={`filter-btn ${index === 0 ? 'active' : ''}`}
            data-filter={cat.id}
            role="tab"
            aria-selected={index === 0 ? 'true' : 'false'}
            aria-controls="gallery-grid"
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="gallery-section">
    <div class="container">
      <div class="gallery-grid" id="gallery-grid" role="tabpanel">
        {products.map((product) => (
          <article 
            class="gallery-item" 
            data-category={product.category}
            data-id={product.id}
          >
            <button 
              class="gallery-item-btn"
              aria-label={`View ${product.title} in full size`}
              data-image={`${product.image}.jpg`}
              data-title={product.title}
              data-alt={product.alt}
            >
              <div class="gallery-image">
                <LazyImage
                  src={product.image}
                  alt={product.alt}
                  width={600}
                  height={400}
                  class="gallery-img"
                />
                <div class="gallery-overlay">
                  <span class="gallery-zoom-icon" aria-hidden="true">üîç</span>
                </div>
              </div>
              <div class="gallery-info">
                <span class="gallery-category">{categories.find(c => c.id === product.category)?.label}</span>
                <h3 class="gallery-title">{product.title}</h3>
              </div>
            </button>
          </article>
        ))}
      </div>

      <!-- Empty state (shown when no products match filter) -->
      <div class="gallery-empty" id="gallery-empty" hidden>
        <p>No products found in this category.</p>
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div class="lightbox" id="lightbox" role="dialog" aria-modal="true" aria-label="Image preview" hidden>
    <div class="lightbox-backdrop"></div>
    <div class="lightbox-content">
      <button class="lightbox-close" aria-label="Close lightbox">
        <span aria-hidden="true">‚úï</span>
      </button>
      <figure class="lightbox-figure">
        <img 
          class="lightbox-image" 
